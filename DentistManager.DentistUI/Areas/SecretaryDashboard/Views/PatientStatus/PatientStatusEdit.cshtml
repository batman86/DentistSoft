@model DentistManager.Domain.ViewModel.AppointmentStatusViewModel
@using DentistManager.DentistUI.HtmlHelpers

@{
    ViewBag.Title = "Patient Status Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)


        <div class="form-group">
            @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.generateAppStatusEditDropDownList(Model.Status)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.start_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.start_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PatientID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.PatientID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PatientName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.PatientName)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.DoctorName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.DoctorName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "PatientStatusList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
