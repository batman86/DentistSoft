@model IEnumerable<DentistManager.Domain.ViewModel.ImagesPresentViewModel>

@{
    ViewBag.Title = "patient Images";
}
<p class="topLink">
    @Html.ActionLink("Create New", "PatientImagesCreate", new { patientID = ViewBag.patientID })
</p>

<table class="pure-table pure-table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appointmentDate)
            </th>
            <th>
                Category
            </th>
            <th>
                Full Image
            </th>
            <th>
                Medium Image
            </th>
            <th>
                Min Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.appointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageCategoryName)
                </td>
                <td>
                    <a href="@item.FullImageURL">Full Image</a>
                </td>
                <td>
                    <a href="@item.MediumImageURL">Medium Image</a>
                </td>
                <td>

                    <img src="@item.MinImageURL" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "PatientImagesEdit", new { patientImageID = item.ImageID }) |
                    @Html.ActionLink("Details", "PatientImagesDetails", new { patientImageID = item.ImageID }) |
                    @Html.ActionLink("Delete", "PatientImagesDelete", new { patientImageID = item.ImageID })
                </td>
            </tr>
        }
    </tbody>
</table>