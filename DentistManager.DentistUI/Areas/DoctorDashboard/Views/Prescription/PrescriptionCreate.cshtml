@model DentistManager.Domain.ViewModel.PrescriptionWrapViewModel
@using DentistManager.DentistUI.HtmlHelpers

@{
    ViewBag.Title = "PrescriptionCreate";
}

<h2>PrescriptionCreate</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PrescriptionViewModel</h4>
        <hr />
        @Html.ValidationSummary(true)

            <div class="form-group">
                select Appointment
                @Html.generatePatientAppointmentDropDownList(Model.appointmentList)
            </div>

            <div class="form-group">
                select Medicine
                @Html.generatePatientMedicineDropDownList(Model.MedicineList)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.prescriptionViewModel.AppointmentID, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prescriptionViewModel.AppointmentID)
                    @Html.ValidationMessageFor(model => model.prescriptionViewModel.AppointmentID)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.prescriptionViewModel.MedicineID, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prescriptionViewModel.MedicineID)
                    @Html.ValidationMessageFor(model => model.prescriptionViewModel.MedicineID)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.prescriptionViewModel.Dose, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prescriptionViewModel.Dose)
                    @Html.ValidationMessageFor(model => model.prescriptionViewModel.Dose)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.prescriptionViewModel.Notice, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prescriptionViewModel.Notice)
                    @Html.ValidationMessageFor(model => model.prescriptionViewModel.Notice)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "PrescriptionList")
</div>
